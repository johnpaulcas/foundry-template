{
  "name": "foundry-template",
  "version": "1.0.0",
  "description": "**Foundry is a blazing fast, portable and modular toolkit for Ethereum application development written in Rust.**",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy:local": "source ./.env && forge script script/DeploySampleToken.t.sol:DeploySampleToken --fork-url http://localhost:8545 --broadcast -vvvv",
    "deploy:sepolia": "source ./.env && forge script script/DeploySampleToken.t.sol:DeploySampleToken --chain sepolia --rpc-url $SEPOLIA_RPC_URL  --broadcast --verify -vvvv"
  },
  "author": "johnpaulcas",
